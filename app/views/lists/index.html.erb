<!-- Main Container -->
<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Lists</h1>
    <%= link_to "Create a new list", new_list_path, class: "btn btn-success" %>
  </div>

  <div class="row g-4">
    <% @lists.each do |list| %>
      <div class="col-md-3">
        <div class="card h-100 shadow-sm">
          <% if list.photo.attached? %>
            <%= cl_image_tag list.photo.key, class: "card-img-top" %>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">
              <%= link_to list.name, list_path(list), class: "stretched-link text-decoration-none text-dark" %>
            </h5>
          </div>
          <div class="card-footer d-flex justify-content-between align-items-center">
            <small class="text-muted">
              <%= pluralize(list.bookmarks.count, "bookmark") %>
            </small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
