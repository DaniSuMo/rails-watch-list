<div class="container my-5 d-flex justify-content-center">
  <div class="w-100" style="max-width: 600px;">
    <div class="card shadow-sm rounded-4 border-0">
      <div class="card-body p-5">
        <h1 class="mb-4 fw-bold display-6 text-center">Create a New Bookmark</h1>

        <%= simple_form_for [@list, @bookmark], html: { class: "needs-validation" } do |f| %>
          <div class="mb-3">
            <%= f.input :comment, label_html: { class: "form-label fw-semibold" }, input_html: { class: "form-control form-control-lg" } %>
          </div>

          <div class="mb-4">
            <%= f.association :movie, label_html: { class: "form-label fw-semibold" }, input_html: { class: "form-select form-select-lg" } %>
          </div>

          <div class="d-grid">
            <%= f.submit "Submit Bookmark", class: "btn btn-primary btn-lg rounded-pill shadow" %>
          </div>
        <% end %>

        <div class="text-center mt-4">
          <%= link_to "← Back to #{@list.name}", lists_path, class: "text-decoration-none fw-semibold text-primary-emphasis" %>
        </div>
      </div>
    </div>
  </div>
</div>
